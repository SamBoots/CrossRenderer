{
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "version": 3,

  "configurePresets": [
    {
      "hidden": true,
      "name": "default-win",
      "description": "default build with options for vulkan or DX12. Not for x86.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "vulkan-win",
      "inherits": "default-win",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "GRAPHICS_API": "Vulkan"
      }
    },
    {
      "name": "directx12-win",
      "inherits": "default-win",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "GRAPHICS_API": "DirectX12"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "DX12_debug",
      "configurePreset": "directx12-win",
      "configuration": "Debug"
    },
    {
      "name": "DX12_Release",
      "configurePreset": "directx12-win",
      "configuration": "Release"
    },
    {
      "name": "VK_Debug",
      "configurePreset": "vulkan-win",
      "configuration": "Debug"
    },
    {
      "name": "VK_Release",
      "configurePreset": "vulkan-win",
      "configuration": "Release"
    }
  ]
}